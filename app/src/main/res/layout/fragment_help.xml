<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F8F9FA">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard_gradient_bg"
                android:padding="24dp">

                <TextView
                    android:id="@+id/text_help"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Need Help?"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find answers to your questions"
                    android:textColor="#E0FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_help" />

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardBackgroundColor="#4CAF50"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_help"
                        app:tint="#FFFFFF" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Dashboard Guide -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_dashboard_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E3F2FD"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_today"
                            app:tint="#2196F3" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dashboard"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Dashboard provides an overview of all your farms and their current status."
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• View system status indicators for water levels, temperature, and humidity"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• See alerts for any issues requiring your attention"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="56dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Farms Guide -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_farms_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_dashboard_guide">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E8F5E9"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_farm"
                            app:tint="#4CAF50" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Farms"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage all your vertical farms from one place."
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Tap on a farm to view detailed sensor data for each layer"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Use the + button to add a new plant to your system"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Each farm card shows the plant name, type, and online status"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="56dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Irrigation Guide -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_irrigation_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_farms_guide">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#E0F7FA"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/ic_drop"
                            app:tint="#00BCD4" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Irrigation Logs"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#00BCD4" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View a complete history of irrigation and system activities."
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Use the filter dropdown to view specific types of activities"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Select a date to view activities from a specific day"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Use the refresh button to update the logs with recent activities"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="56dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sensor Data Guide -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_sensor_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_irrigation_guide">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#FFF3E0"
                        android:layout_marginEnd="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@android:drawable/ic_menu_manage"
                            app:tint="#FF9800" />
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sensor Data"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monitor detailed sensor readings for each farm and layer."
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• View soil moisture levels in each growing layer"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Monitor additional sensors: temperature, humidity, battery level"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="56dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Check the status of system components like grow lights and water pump"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="56dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Still Need Help? -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_contact_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_sensor_guide"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="#E8F5E9">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Still Need Help?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact our support team at vertigrow@example.com or message us on our social media channels."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_contact_support"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Support"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#4CAF50"
                    app:cornerRadius="12dp"
                    android:padding="12dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView> 
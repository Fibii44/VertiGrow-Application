<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/text_help"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Need Help?"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Dashboard Guide -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_dashboard_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/text_help">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_today"
                        android:tint="#2196F3"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Dashboard"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#2196F3" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The Dashboard provides an overview of all your farms and their current status."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• View system status indicators for water levels, temperature, and humidity"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• See alerts for any issues requiring your attention"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Farms Guide -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_farms_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_dashboard_guide">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_myplaces"
                        android:tint="#4CAF50"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Farms"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#4CAF50" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Manage all your vertical farms from one place."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Tap on a farm to view detailed sensor data for each layer"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Use the + button to add a new plant to your system"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Each farm card shows the plant name, type, and online status"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Irrigation Guide -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_irrigation_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_farms_guide">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_recent_history"
                        android:tint="#00BCD4"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Irrigation Logs"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#00BCD4" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="View a complete history of irrigation and system activities."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Use the filter dropdown to view specific types of activities"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Select a date to view activities from a specific day"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Use the refresh button to update the logs with recent activities"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Sensor Data Guide -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_sensor_guide"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_irrigation_guide">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="36dp"
                        android:layout_height="36dp"
                        android:src="@android:drawable/ic_menu_manage"
                        android:tint="#FF9800"
                        android:layout_marginEnd="16dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sensor Data"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="#FF9800" />
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Monitor detailed sensor readings for each farm and layer."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• View soil moisture levels in each growing layer"
                    android:textSize="14sp"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Monitor additional sensors: temperature, humidity, battery level"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Check the status of system components like grow lights and water pump"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="52dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Still Need Help? -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_contact_support"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/card_sensor_guide"
            app:layout_constraintBottom_toBottomOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#E8F5E9">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Still Need Help?"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#4CAF50" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact our support team at vertigrow@example.com or message us on our social media channels."
                    android:textSize="14sp"
                    android:layout_marginTop="8dp" />

                <Button
                    android:id="@+id/button_contact_support"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Contact Support"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="16dp"
                    android:backgroundTint="#4CAF50" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView> 
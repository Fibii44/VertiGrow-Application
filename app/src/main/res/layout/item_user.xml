<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_user"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="6dp"
    android:layout_marginHorizontal="2dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- User Avatar -->
        <androidx.cardview.widget.CardView
            android:id="@+id/avatar_container"
            android:layout_width="56dp"
            android:layout_height="56dp"
            app:cardCornerRadius="28dp"
            app:cardElevation="0dp"
            app:cardBackgroundColor="#E8F5E9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/text_user_initial"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="#4CAF50"
                tools:text="J" />
        </androidx.cardview.widget.CardView>

        <!-- User Information -->
        <TextView
            android:id="@+id/text_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-medium"
            android:maxLines="1"
            android:textColor="#212121"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/button_more_options"
            app:layout_constraintStart_toEndOf="@id/avatar_container"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="John Doe" />

        <TextView
            android:id="@+id/text_user_email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="#757575"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@id/text_user_name"
            app:layout_constraintStart_toStartOf="@id/text_user_name"
            app:layout_constraintTop_toBottomOf="@id/text_user_name"
            tools:text="john.doe@example.com" />

        <LinearLayout
            android:id="@+id/container_join_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="@id/text_user_email"
            app:layout_constraintTop_toBottomOf="@id/text_user_email">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_calendar"
                app:tint="#4CAF50" />

            <TextView
                android:id="@+id/text_join_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:textColor="#757575"
                android:textSize="12sp"
                tools:text="Joined: Jan 15, 2023" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/container_user_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toEndOf="@id/container_join_date"
            app:layout_constraintTop_toTopOf="@id/container_join_date"
            app:layout_constraintBottom_toBottomOf="@id/container_join_date">

            <ImageView
                android:id="@+id/icon_user_role"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/ic_user_role"
                app:tint="#2E7D32" />

            <TextView
                android:id="@+id/text_user_role"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_rounded_green_light"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:layout_marginStart="4dp"
                android:textColor="#2E7D32"
                android:textSize="12sp"
                tools:text="Admin" />
        </LinearLayout>

        <!-- More Options Button -->
        <ImageButton
            android:id="@+id/button_more_options"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="More options"
            android:src="@drawable/ic_more_vert"
            app:tint="#757575"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView> 
<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FA"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Header Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dashboard_gradient_bg"
                android:padding="24dp">

                <TextView
                    android:id="@+id/text_sensor_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Farm Sensors"
                    android:textColor="#FFFFFF"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:fontFamily="sans-serif-medium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Monitor your farm's environmental data"
                    android:textColor="#E0FFFFFF"
                    android:textSize="16sp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/text_sensor_title" />

                <androidx.cardview.widget.CardView
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    app:cardCornerRadius="28dp"
                    app:cardBackgroundColor="#4CAF50"
                    app:cardElevation="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_gravity="center"
                        android:src="@android:drawable/ic_menu_manage"
                        app:tint="#FFFFFF" />
                </androidx.cardview.widget.CardView>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Layer 3 Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_layer3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_header">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="375dp"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_l3"
                    android:layout_width="21dp"
                    android:layout_height="23dp"
                    android:text="L3"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Fault Indicator for L3 -->
                <View
                    android:id="@+id/fault_indicator_l3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_background"
                    app:layout_constraintBottom_toBottomOf="@id/text_l3"
                    app:layout_constraintStart_toEndOf="@id/text_l3"
                    app:layout_constraintTop_toTopOf="@id/text_l3" />

                <TextView
                    android:id="@+id/text_moisture_l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="1500"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/fault_indicator_l3"
                    app:layout_constraintTop_toTopOf="@id/text_l3" />

                <TextView
                    android:id="@+id/soilmoisture_l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Soil Moisture"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/text_moisture_l3"
                    app:layout_constraintTop_toTopOf="@id/text_l3" />

                <TextView
                    android:id="@+id/text_moderate_l3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_orange_light"
                    android:padding="4dp"
                    android:text="MODERATE"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progress_l3"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:max="100"
                    android:progress="50"
                    android:progressTint="@android:color/holo_orange_light"
                    app:layout_constraintTop_toBottomOf="@id/text_l3" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/progress_l3">

                    <ImageView
                        android:layout_width="280dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/plant" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Layer 2 Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_layer2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_layer3">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L2"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Fault Indicator for L2 -->
                <View
                    android:id="@+id/fault_indicator_l2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_background"
                    app:layout_constraintBottom_toBottomOf="@id/text_l2"
                    app:layout_constraintStart_toEndOf="@id/text_l2"
                    app:layout_constraintTop_toTopOf="@id/text_l2" />

                <TextView
                    android:id="@+id/soilmoisture_l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Soil Moisture"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/text_moisture_l2"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_moisture_l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="2234"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/text_l2"
                    app:layout_constraintTop_toTopOf="@id/text_l2" />

                <TextView
                    android:id="@+id/text_moderate_l2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_orange_light"
                    android:padding="4dp"
                    android:text="MODERATE"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progress_l2"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:progress="65"
                    android:progressTint="@android:color/holo_orange_light"
                    app:layout_constraintTop_toBottomOf="@id/text_l2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/progress_l2">

                    <ImageView
                        android:layout_width="280dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/plant" />


                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Layer 1 Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_layer1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_layer2">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/text_l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="L1"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Fault Indicator for L1 -->
                <View
                    android:id="@+id/fault_indicator_l1"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/circle_background"
                    app:layout_constraintBottom_toBottomOf="@id/text_l1"
                    app:layout_constraintStart_toEndOf="@id/text_l1"
                    app:layout_constraintTop_toTopOf="@id/text_l1" />

                <TextView
                    android:id="@+id/text_moisture_l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:text="1985"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/text_l1"
                    app:layout_constraintTop_toTopOf="@id/text_l1" />

                <TextView
                    android:id="@+id/soilmoisture_l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:text="Soil Moisture"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@+id/text_moisture_l1"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_moderate_l1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/holo_orange_light"
                    android:padding="4dp"
                    android:text="MODERATE"
                    android:textSize="14sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ProgressBar
                    android:id="@+id/progress_l1"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:progress="55"
                    android:progressTint="@android:color/holo_orange_light"
                    app:layout_constraintTop_toBottomOf="@id/text_l1" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/progress_l1">

                    <ImageView
                        android:layout_width="280dp"
                        android:layout_height="100dp"
                        android:layout_margin="4dp"
                        android:src="@drawable/plant" />
                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

        <!-- Monitoring Cards Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_monitoring"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="1dp"
            app:layout_constraintTop_toBottomOf="@id/card_layer1">

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:padding="8dp">

                <!-- Battery Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <ProgressBar
                            android:id="@+id/battery_progress"
                            style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                            android:layout_width="24dp"
                            android:layout_height="48dp"
                            android:layout_gravity="center_vertical"
                            android:progress="85"
                            android:progressTint="@android:color/holo_green_light"
                            android:rotation="270" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Battery"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/battery_percentage"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="85%"
                                android:textColor="@android:color/holo_green_dark" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- pH Level Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/fault_indicator_ph"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/circle_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="pH Level"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/ph_level"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="6.5"
                            android:textColor="@android:color/holo_blue_dark"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Temperature Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/fault_indicator_temp"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/circle_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Temperature"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/temperature"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25Â°C"
                            android:textColor="@android:color/holo_orange_dark"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Humidity Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/fault_indicator_humidity"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/circle_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Humidity"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/humidity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="65%"
                            android:textColor="@android:color/holo_blue_light"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Light Intensity Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/fault_indicator_light"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/circle_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Light Intensity"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/light_intensity"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="800 lux"
                            android:textColor="@android:color/holo_orange_light"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Water Tank Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <View
                                android:id="@+id/fault_indicator_water"
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/circle_background" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Water Tank"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/water_tank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Low"
                            android:textColor="@android:color/holo_blue_light" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Grow Lights Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Grow Lights"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/grow_lights"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ON"
                            android:textColor="@android:color/holo_green_light"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Water Pump Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="2dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Water Pump"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/water_pump"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="OFF"
                            android:textColor="@android:color/darker_gray"
                            android:textSize="20sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </GridLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView> 
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- App Logo/Title -->
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/app_logo"
        android:layout_marginBottom="32dp"/>

    <!-- App Title Text -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VertiGrow"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#8BC34A"
        android:textAlignment="center"
        android:layout_marginBottom="24dp"/>

    <!-- Email input with material design -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:helperText="Use this for manual account login"
        app:helperTextEnabled="true"
        app:helperTextTextColor="#8BC34A"
        app:boxStrokeColor="#8BC34A"
        app:hintTextColor="#8BC34A"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/emailEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:textColorHint="?attr/colorControlNormal"
            android:textColor="?android:attr/textColorPrimary"
            android:inputType="textEmailAddress"
            android:drawableStart="@drawable/ic_email"
            android:drawableTint="#8BC34A"
            android:drawablePadding="8dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password input with material design -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#8BC34A"
        app:boxStrokeColor="#8BC34A"
        app:hintTextColor="#8BC34A"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/passwordEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:textColorHint="?attr/colorControlNormal"
            android:textColor="?android:attr/textColorPrimary"
            android:inputType="textPassword"
            android:drawableStart="@drawable/ic_lock"
            android:drawableTint="#8BC34A"
            android:drawablePadding="8dp"/>
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Login button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/loginButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        app:backgroundTint="#8BC34A"/>

    <!-- Divider with "OR" -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="16dp">

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#8BC34A" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OR"
            android:layout_marginHorizontal="16dp"
            android:textColor="#8BC34A" 
            android:textStyle="bold"/>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:background="#8BC34A" />
    </LinearLayout>

    <!-- Google Sign In button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/googleSignInButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with Google"
        android:textColor="#757575"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        app:icon="@drawable/ic_google"
        app:iconTint="@null"
        app:iconGravity="textStart"
        app:iconPadding="8dp"
        android:backgroundTint="@android:color/white"
        app:strokeColor="#8BC34A"
        app:strokeWidth="1dp"/>

</LinearLayout>